{
  "buildCommand": "bun run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "functions": {
    "api/**/*.ts": {
      "runtime": "@vercel/node@3"
    }
  },
  "rewrites": [
    { "source": "/api/infactory/:path*", "destination": "/api/infactory/[...path]" },
    { "source": "/((?!api/).*)", "destination": "/index.html" }
  ]
}
